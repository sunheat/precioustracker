<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/movesListImg"
        android:scaleType="centerInside"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photoLastMove"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/movesListTxtItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/element_margin"
        android:layout_marginTop="@dimen/element_margin"
        android:layout_toRightOf="@+id/movesListImg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movesListTxtLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_margin"
        android:layout_alignBottom="@+id/movesListImg"
        android:layout_alignLeft="@+id/movesListTxtItem" />

</RelativeLayout>